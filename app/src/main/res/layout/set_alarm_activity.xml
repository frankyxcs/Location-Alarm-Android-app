<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="5">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="4">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:weightSum="6">

            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="3sp"
                    android:text="@string/Text_Title"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/ET_title"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:hint="@string/Hint_Enter_Title"
                    android:padding="3sp"
                    android:textColor="@color/black"
                    android:textSize="10dp" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Ringtone"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/Button_ringtone"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/backgroundColor"
                    android:gravity="center"
                    android:textColor="@color/black" />

            </TableRow>

            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="3sp"
                    android:text="Enable Alarm"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <CheckBox
                    android:id="@+id/CB_activate"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:checked="true" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Repeat"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <ToggleButton
                    android:id="@+id/TB_activate_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textOff="Once"
                    android:textOn="Always" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:text="Range"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TV_range"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1"
                        android:text="100 meters"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <SeekBar
                        android:id="@+id/SB_range"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1" />
                </LinearLayout>

            </TableRow>

            <TableRow android:layout_weight="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TV_latitude"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Latitude : "
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/TV_longitude"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Longitude : "
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="bottom"
        android:orientation = "horizontal"
        android:id="@+id/confirmation"
        android:weightSum="2"
        android:layout_weight="1">

        <Button
            android:id="@+id/BT_cancel"
            android:layout_width = "0sp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:text="Cancel"
            />

        <Button
            android:id="@+id/BT_save"
            android:layout_width = "0sp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:text="Save"
            />

    </LinearLayout>


</LinearLayout>

